<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.papax.ag.papax">

	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:name=".PapaxApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/NoActionBarPrimary">
		<activity android:name=".SplashScreenActivity" android:screenOrientation="sensorPortrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoActionBarPrimary"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/NoActionBarPrimary" />
        <activity
            android:name=".MainTabActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarPrimary"/>

		<activity
			android:name=".ModeChooserActivity"
			android:theme="@style/NoActionBarPrimary" />

	</application>

</manifest>